<Window x:Class="NSUI.Sample.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:NSUI.Controls;assembly=NSUI.Wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NSUI.Sample.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainView"
        Width="300" KeyDown="MainView_OnKeyDown"
        Height="300"
        mc:Ignorable="d">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <controls:NSActionBarButton Content="OK" AutomationProperties.AccessKey="A" Click="ButtonBase_OnClick" />
            <controls:NSButton Width="150" Margin="0,20,0,0"
                              x:Name="Button2" Content="A" />
            
            <Grid Margin="0,20,0,0">
                <controls:NSCircleButton Width="48" Height="48" Label="xxxxxxHello">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="https://www.cnblogs.com/images/logo_small.gif"></ImageBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </controls:NSCircleButton>
            </Grid>

            <Grid   Margin="0,20,0,0">
            <controls:NSButton Width="150"
                               Content="B" />
            <local:XxHost >
                <Button Opacity="0.4" Content="wwwwwwwwwwwwwwwwDogewwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww" ></Button>
                </local:XxHost>
            </Grid>
            
            <Grid Margin="0,20,0,0">
                <controls:NSButton Width="150" Content="C"></controls:NSButton>
                <local:FloatingContentControl>
                    <Button Opacity="0.4" Content="哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇哇"></Button>
                </local:FloatingContentControl>
            </Grid>
            <controls:NSClock></controls:NSClock>
            <controls:NSClock></controls:NSClock>
        </StackPanel>
    </Grid>
</Window>