<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:NSUI.Controls">
    <Style TargetType="controls:NSClock">
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="Foreground"
                Value="{DynamicResource NSForegroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:NSClock">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="PART_TimeTextBlock"
                                   VerticalAlignment="Bottom"
                                   FontSize="14" />
                        <TextBlock x:Name="PART_MiddayTextBlock"
                                   VerticalAlignment="Bottom"
                                   FontSize="12" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>