                    xmlns:controls="clr-namespace:NSUI.Controls"
                    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">
    <Style TargetType="controls:NSFocusVisual">
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="Margin"
                Value="-1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:NSFocusVisual">
                    <Rectangle x:Name="PART_VisualElement"
                               StrokeThickness="1">
                        <Shape.Stroke>
                            <SolidColorBrush x:Name="VisualElementBrush"
                                             Color="Red" />
                        </Shape.Stroke>
                        <UIElement.RenderTransform>
                            <TranslateTransform />
                        </UIElement.RenderTransform>
