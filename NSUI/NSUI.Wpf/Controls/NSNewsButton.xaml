                    xmlns:controls="clr-namespace:NSUI.Controls">
    <Style TargetType="controls:NSNewsButton">
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="Height"
                Value="88" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:NSNewsButton">
                    <Grid />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width"
                Value="88" />
    </Style>
</ResourceDictionary>